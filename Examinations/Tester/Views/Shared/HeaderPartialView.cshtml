
<div class="headerTop">
    <div class="templateTitle">
        <table>
            <tr>
                <td>
                    @Html.ActionLink("陇川县农村信用合作联社-考生系统", "Index", "Home")
                </td>
                <td>
                    <div style="margin-left: 20px" id="clock">clock here</div>
                </td>
            </tr>
        </table>
    </div>
    <div class="loginControl">
        @Html.Partial("LogOnPartialView")
    </div>
</div>
<div class="headerMenu">
    @Html.DevExpress().Menu(settings =>
{
    settings.Name = "HeaderMenu";
    settings.ItemAutoWidth = false;
    settings.Width = Unit.Percentage(100);
    settings.Styles.Style.Border.BorderWidth = Unit.Pixel(0);
    settings.Styles.Style.BorderTop.BorderWidth = Unit.Pixel(1);

    settings.Items.Add(item =>
    {
        item.Text = "主页";
        item.NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Home", Action = "Index" });
    });
    settings.Items.Add(item =>
    {
        item.Text = "信息管理";
        item.Items.Add("个人信息").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Account", Action = "EditProfile" });
        item.Items.Add("修改密码").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Account", Action = "ChangePassword" });
    });
    settings.Items.Add(item =>
    {
        item.Text = "技术支持";
        item.Items.Add("报告问题").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Manage", Action = "PostTechReport" });
    });
    settings.Items.Add(item =>
    {
        item.Text = "关于";
        item.NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Manage", Action = "About" });
    });
}).GetHtml()
</div>